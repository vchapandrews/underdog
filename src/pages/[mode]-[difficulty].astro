---
import KeyboardGui from "../components/KeyboardGui.astro";
import Players from "../components/Players.astro";
import HomeButton from "../components/HomeButton.astro";
import GameModeDisplay from "../components/GameModeDisplay.astro";
import GameHud from "../components/GameHud.astro";
import BaseLayout from "../layout/BaseLayout.astro";

export function getStaticPaths() {
    const MODES = ['classic', 'mash'];
    const DIFFICULTIES = ['easy', 'medium', 'hard'];

    const staticPaths = [];

    for (const mode of MODES) {
        for (const difficulty of DIFFICULTIES) {
            staticPaths.push({
                params: {mode, difficulty}
            });
        }
    }

    return staticPaths;
}
---

<BaseLayout>
    <audio id="happyBark">
        <source src="/sounds/mixkit-happy-puppy-barks-741(3).mp3" type="audio/mpeg">
    </audio>

    <audio id="homeScreenAudio">
        <source src="/sounds/2021-08-16_-_8_Bit_Adventure_-_www.FesliyanStudios.com.mp3" type="audio/mpeg">
    </audio>

    <!--Top bar-->
    <GameHud/>
    <GameModeDisplay/>

    <!--Racetrack-->
    <Players/>

    <!--Start-->
    <HomeButton/>

    <!--Arrows-->
    <KeyboardGui/>

    <script src="/src/util/run.js"/>
</BaseLayout>